                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="wechat" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="85" translate="label" type="select">
                    <label>WeChat Pay</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="ideal" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="86" translate="label" type="select">
