                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sofort" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="89" translate="label" type="select">
                    <label>Bank Transfer via Sofort</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="sort_order" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="91" translate="label" type="text">
                    <label>Sort Order</label>
                </field>
            </group>
        </section>
    </system>
</config>
